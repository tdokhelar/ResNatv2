{% trans_default_domain 'admin' %}

{% extends 'admin/core_custom/base_edit.html.twig' %}

{% block javascripts %}
{{ parent() }}
<script type="text/javascript">
  jQuery(document).ready(function($){
    $watchModeration  = $('.watch-moderation');
    $watchModerationFrequency = $('.watch-moderation-frequency:not(select)');
    $watchModeration.on('ifChecked ifUnchecked', function(e, aux){
        if( $watchModeration.prop('checked') ){
          $watchModerationFrequency.show();
        }else{
          $watchModerationFrequency.hide();
        }
    });        
  });
</script>
{% endblock %}