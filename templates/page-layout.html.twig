{% extends "base-layout.html.twig" %}

{% block stylesheets %}

  <link rel="stylesheet" href="{{ asset('css/pages.css?ver=' ~ version) }}">

  {% block page_stylesheets %}
  {% endblock %}

{% endblock %}

{% block body %}

	<div id="page-container" {% if pageName is defined %}class="{{ pageName }}"{% endif %}>

		{% block page_content %}
		{% endblock %}

		<div id="page-content" {% if pageName is defined %}class="{{ pageName }}"{% endif %}>

			{# FLASH MESSAGES #}
			{% for type, messages in app.session.flashBag.all %}
				{% if messages | length > 0 %}
				<div class="flash-messages-container">
		      {% for message in messages %}
		          <div class="flash-message {{ type }}">
		              {{ message|trans({}, 'SonataUserBundle')|raw }}
		              <span class="btn-close gogo-icon-clear" onclick="$(this).parent().slideUp(200);console.log('click')";></span>
		          </div>
		      {% endfor %}
		    </div>
	      {% endif %}
 			{% endfor %}

			{% block body_content %}
			{% endblock %}

		</div>
	</div>

{% endblock %}

{% block javascripts %}

    {% block page_javascripts %}
    {% endblock %}

{% endblock %}

